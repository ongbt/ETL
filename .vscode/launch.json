{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Current File",
      "type": "python",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "justMyCode": true
    },
    {
      "name": "Python: Debug main.py",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/main.py",
      "console": "integratedTerminal",
      "args": ["input.csv", "output.csv", "transformations.yml"]
    },
    {
      "name": "Python: Debug pipeline_main.py",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/pipeline_main.py",
      "console": "integratedTerminal",
      "args": ["pipeline.yml"]
    }
  ]
}
